
<%= simple_form_for(@operation) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :stock %>
    <%= f.association :user %>
    <%= f.input :in_strategy %>
    <%= f.input :out_strategy %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :tp_price %>
    <%= f.input :sl_price %>
    <%= f.input :max_profit %>
    <%= f.input :max_loss %>
    <%= f.input :obs %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
